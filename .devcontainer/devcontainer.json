{
  "name": "bnck-admin-catalogo Dev Container",
  "dockerComposeFile": "../docker-compose.yaml",  // Ajustado para apontar para o arquivo na raiz
  "service": "app",
  "workspaceFolder": "/app",
  "extensions": [
    "redhat.java",
    "vscjava.vscode-java-debug",
    "vscjava.vscode-java-test",
    "ms-azuretools.vscode-docker",
    "eamodio.gitlens",
    "mhutchie.git-graph",
    "usernamehw.errorlens"
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/zsh",
    "java.configuration.runtimes": [
      {
        "name": "JavaSE-17",
        "path": "/usr/local/openjdk-17",
        "default": true
      }
    ]
  },
  "postCreateCommand": "zsh"
}
